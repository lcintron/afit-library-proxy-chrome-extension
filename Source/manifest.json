{
  "name": "ALP",
  "description": "ALP automatically redirects links to on-line research databases to the AFIT authenticated link.",
  "version": "1.0",
  "permissions": [
    "tabs",
    "storage",
    "notifications",
    "declarativeContent",
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "scripts": [
      "jquery-3.3.1.min.js",
      "utils.js",
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*"
      ],
      "css": [
        "afitproxyredirect.css"
      ]
    },
    {
      "matches": [
        "https://*/*"
      ],
      "css": [
        "afitproxyredirect.css"
      ]
    },
    {
      "matches": [
        "file://*/*"
      ],
      "css": [
        "afitproxyredirect.css"
      ]
    }
  ],
  "browser_action": {
    "default_title": "AFIT Database Proxy",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/Logo16x16.png",
      "32": "images/Logo32x32.png",
      "48": "images/Logo48x48.png",
      "128": "images/Logo128x128.png"
    }
  },
  "icons": {
    "16": "images/Logo16x16.png",
    "32": "images/Logo32x32.png",
    "48": "images/Logo48x48.png",
    "128": "images/Logo128x128.png"
  },
  "manifest_version": 2
}